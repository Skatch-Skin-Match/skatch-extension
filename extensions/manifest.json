{
  "manifest_version": 3,
  "version": "1.1",
  "name": "skinshift: Shopping Skin Match",
  "short_name": "skinshift",
  "description": "skinshift",
  "action": {
    "default_popup": "./dist/index.html"
  },
  "icons": {
    "16": "./dist/ss-icon.png",
    "32": "./dist/ss-icon.png",
    "48": "./dist/ss-icon.png",
    "128": "./dist/ss-icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "webNavigation", "tabs", "activeTab"]
}
